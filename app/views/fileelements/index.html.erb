<h1>Image uploader</h1>

<table>
  <tr>
    <th>Filename</th>
    <th>Content type</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @fileelements.each do |fileelement| %>
  <tr>
    <td>
      <%= image_tag url_for(:action => 'download', :id => fileelement.id),
      :alt => fileelement.filename, :size => '100x100' %>
    </td>
    <td><%= fileelement.filename %></td>
    <td><%= fileelement.content_type %></td>
    <td><%= link_to 'Show', fileelement %></td>
    <td><%= link_to 'Delete', fileelement, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Add image', new_fileelement_path %>
